<!--pages/car/car.wxml-->
 <view class='page'>
  <view class='title'>
    <view class='back'></view>
    <view class='checkadd'>新增收货地址</view>
  </view>
  <view class='info'>
    <view class='user'>
      <view>收货人</view>
      <input type='text' placeholder='收货人姓名' placeholder-style='font-size:28rpx;' value='{{name}}' bindinput='user'></input>
    </view> 
    <view class='user'>
      <view>手机号码</view>
      <input type='number' placeholder='配送员联系您的电话' placeholder-style='font-size:28rpx;' value='{{phoneNumber}}' bindinput='phoneNumber'></input>
    </view>
    <view class='user'>
      <view>所在地址</view>
      <input type='text' placeholder='请选择城市' placeholder-style='font-size:28rpx;' value='{{city}}' bindinput='city'></input>
    </view>
    <view class='user'>
      <view>收货地址</view>
      <input type='text' placeholder='请选择您的住宅小区、大厦或学校' placeholder-style='font-size:28rpx;' value='{{place}}' bindinput='place'></input>
    </view>
    <view class='user'>
      <view>详细地址</view>
      <input type='text' placeholder='请输入楼号门牌号等详细信息' placeholder-style='font-size:28rpx;' value='{{detailAdd}}' bindinput='detailAdd'></input>
    </view>
  </view>
  <!-- <view class='tanchuang'>{{title}}</view> -->
  <view class='keep' bindtap='keep'>保存</view>
</view> 
<!--toast弹窗-->
<include src="../template/toast.wxml"/>

